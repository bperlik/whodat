<h2>Dashboard</h2>

  <% if user_signed_in? %>
    <h3> You're logged in as <%= link_to current_user.name %> </h3> <br/>
  <% end %>

<ul class="nav nav-tabs">
  <li> <%= link_to 'Signup', new_user_path %> </li>
  <li> <%= link_to 'Login', new_session_path %> </li>

  <% if user_signed_in? %>
    <li> <%= link_to 'Logout', session_path(current_user), data: {confirm: "Are you sure?" }, method: :delete %> </li>
  <% end %>

  <li> <%= link_to 'Main app', main_app.root_path %> </li>

</ul>

